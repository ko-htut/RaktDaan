<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cdev.raktdaan.SignInActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Rakt Daan"

        android:textColor="@android:color/holo_red_light"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/facebook_button"
        android:layout_alignEnd="@+id/facebook_button" />

    <Button
            android:id="@+id/google_button"
            style="@style/FirebaseUI.Button.AccountChooser.GoogleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_with_google"
            tools:layout_editor_absoluteY="392dp"
            tools:layout_editor_absoluteX="99dp"
            android:layout_marginBottom="21dp"
            android:layout_above="@+id/facebook_button"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/facebook_button"
            android:layout_width="wrap_content"
            style="@style/FirebaseUI.Button.AccountChooser.FacebookButton"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_with_facebook"
            tools:layout_editor_absoluteY="480dp"
            tools:layout_editor_absoluteX="90dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="75dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/blood_drop"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="Go for a run in anotherâ€™s veins"/>

    <ProgressBar
        android:id="@+id/loginProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

</RelativeLayout>
