<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/myRequestListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:context="com.cdev.raktdaan.Fragments.MyRequestsFragment">

        <!-- TODO: Update blank fragment layout -->


    </ListView>

    <RelativeLayout
        android:id="@+id/relativeGayab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/noRequestFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myRequestProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="No Request found !"
            android:textSize="30sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/myRequestProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:foregroundGravity="center" />
    </RelativeLayout>

</RelativeLayout>


