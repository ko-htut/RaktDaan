<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ListView
    android:layout_width="match_parent"
    android:id="@+id/myRequestListView"
    android:layout_height="match_parent"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:visibility="gone"
    tools:context="com.cdev.raktdaan.Fragments.MyRequestsFragment">

    <!-- TODO: Update blank fragment layout -->


</ListView>

    <RelativeLayout
        android:id="@+id/relativeGayab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:textSize="30sp"
            android:id="@+id/noRequestFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Request found !"
            android:visibility="gone"
            android:layout_below="@+id/myRequestProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp" />

        <ProgressBar
            android:foregroundGravity="center"
            android:id="@+id/myRequestProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>


